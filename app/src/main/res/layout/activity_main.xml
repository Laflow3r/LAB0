<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lafleur.alexandre.lab0.MainActivity"
    android:orientation="vertical">

    <include layout="@layout/toolbar"
        android:id="@+id/monToolBar" />



    <TextView
        android:id="@+id/monTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello"/>

    <EditText
        android:id="@+id/activity_main_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Please type your name"/>

    <Button
        android:id="@+id/monButtonActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/activityChanger" />

    <Button
        android:id="@+id/monButtonToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="customToast"
        android:text="@string/ouvrirToast" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
